#include<stdio.h>
#incldue<stdlib.h>
int main()
{
	FILE *fp;
	char str[100];
	
	if((fp-fopen("text.txt","at"))==NULL)
	{
		printf("cannot open the file !\n");
		exit(1);
	}
	
	printf("请输入字符串:(回车键结束)\n");
	do
	{
		gets(str);
		fputs(str,fp);
		fputc('\n',fp);
	}while(*str!=NULL);
	
	fclose(fp);
	return 0;
} 