#include<stdio.h>
#include<conio.h>
char delechar(char str[100],char ch);
int main()
{
	char str[100];
	char ch;
	printf("请输入一串字符:");
	scanf("%s",str); 
	printf("请输入你想要删除的一个字符:");
	ch=getchar();
	
	delechar(str,ch);
	
	printf("\n指定字符以删除!\n");
	return 0;
} 
char delechar(char str[100],char ch)
{
	int i;
	for(i=0;i<=100;i++)
	{
		if(str[i]==ch)
		{
			str[i]='\0';
		}
	}	
	return str[100];
}